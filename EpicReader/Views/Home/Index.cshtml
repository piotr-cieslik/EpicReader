@model EpicReader.Models.Home.IndexViewModel

<form method="post" asp-action="process" enctype="multipart/form-data">
    <input type="file" name="file" />
    <input type="submit" />
</form>

<h1>Kolejka</h1>
<ul>
    @foreach (var document in Model.Queued())
    {
        <li>@document</li>
    }
</ul>

<h1>Przetwarzane</h1>
<ul>
    @foreach (var document in Model.Processing())
    {
        <li>@document</li>
    }
</ul>

<h1>Przetworzone</h1>
<ul>
    @foreach (var document in Model.Processed())
    {
    <li><a href="@document.Url">@document.FileName</a></li>
    }
</ul>